<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ADBACB" />
            <gradient android:angle="-90" android:startColor="#4E535B" android:endColor="#A4ADBD"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ADBACB" />
            <solid android:color="#4E535B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ADBACB" />
            <gradient android:angle="-90" android:startColor="#A4ADBD" android:endColor="#4E535B" />
        </shape>
    </item>
</selector>