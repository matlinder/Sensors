<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/buttonColor" />
            <gradient android:angle="-90" android:startColor="#124FB2" android:endColor="#5491F6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/buttonColor" />
            <solid android:color="#124FB2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/buttonColor" />
            <gradient android:angle="-90" android:startColor="#5491F6" android:endColor="#124FB2" />
        </shape>
    </item>
</selector>