<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mathew.sensorlogin.ManageActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/createNetwork"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/mybutton"
            android:onClick="startCreateNetworkActivity"
            android:text="Create Network"
            android:textColor="@android:color/white"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/editNetwork"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:onClick="startEditNetworkActivity"
            android:text="Edit Network"
            android:textColor="@android:color/white"
            android:textSize="18sp"></Button>
        <Button
            android:id="@+id/addGateway"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:onClick="startAddGatewayActivity"
            android:text="Add Gateway"
            android:textColor="@android:color/white"
            android:textSize="18sp"></Button>
        <Button
            android:id="@+id/addSensor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:onClick="startAddSensorActivity"
            android:text="Add Sensor"
            android:textColor="@android:color/white"
            android:textSize="18sp"></Button>
        <Button
            android:id="@+id/moveSensor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:onClick="startMoveSensorActivity"
            android:text="Move Sensor"
            android:textColor="@android:color/white"
            android:textSize="18sp"></Button>
        <Button
            android:id="@+id/users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:onClick="startUserActivity"
            android:text="Users"
            android:textColor="@android:color/white"
            android:textSize="18sp"></Button>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
